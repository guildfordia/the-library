# The Library - Environment Configuration Example
# Copy this file to .env and update values for your environment

# ================================
# API Configuration
# ================================

# Allowed CORS origins (comma-separated)
# Production: https://thelibrary.retconblackmountain.info
# Development: http://localhost:3000,http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database path (relative to server directory)
DATABASE_PATH=index/library.db

# API log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ================================
# UI Configuration (React)
# ================================

# API URL for React app
# Production: /api (proxied by nginx)
# Development: http://localhost:8000
REACT_APP_API_URL=/api

# ================================
# Production Deployment
# ================================

# Domain for production deployment
PRODUCTION_DOMAIN=thelibrary.retconblackmountain.info

# Traefik network name
TRAEFIK_NETWORK=traefik-public

# Docker compose project name
COMPOSE_PROJECT_NAME=the-library

# ================================
# Optional: Development Settings
# ================================

# Enable debug mode (true/false)
DEBUG=false

# Port for local development API
API_PORT=8000

# Port for local development UI
UI_PORT=3000
